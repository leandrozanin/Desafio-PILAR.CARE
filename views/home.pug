doctype html  
html(lang='pt')  
  head
    title PILAR.CARE
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="static/style.css")
    script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.6.6/lottie.min.js")
