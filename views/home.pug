    header 
      h1 PILAR.CARE
    #content-play
      .gameExecuting
        #computer.computer
        #user.user
      #content-anim
      #content-msg
      .controls
        button.pedra(onclick="play('pedra')")
          img(src="static/img/pedra.png", alt="pedra")  
